{
  "name": "asso",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev": "node ops/run-dev.mjs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "migrate": "npm run -w @asso/api prisma:migrate",
    "generate": "npm exec --workspace @asso/api prisma generate",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "vue-eslint-parser": "10.2.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.14.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs,vue}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,yaml,yml}": [
      "prettier --write"
    ]
  }
}
